<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    app:startDestination="@id/homeActivity">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.sriyank.a3rdmedicalsummertrainingproject.UI.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/splash"
        android:name="com.sriyank.a3rdmedicalsummertrainingproject.UI.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splash_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.sriyank.a3rdmedicalsummertrainingproject.OnBoarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.sriyank.a3rdmedicalsummertrainingproject.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
</navigation>