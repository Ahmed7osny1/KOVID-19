<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_margin="@dimen/_7sdp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_285sdp"
            android:layout_margin="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:src="@drawable/spreada"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#003971"
                    />

                <TextView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/person_to_person_spread_as_close_contact_with_infected"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#003971"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transmission1"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_285sdp"
            android:layout_margin="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:src="@drawable/spreadb"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#003971"
                    />

                <TextView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/touching_or_contact_with_infected_surfaces_or_objects"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#003971"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transmission2"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_275sdp"
            android:layout_height="@dimen/_285sdp"
            android:layout_margin="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:src="@drawable/spreadc"
                    android:scaleType="centerCrop"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_3sdp"
                    android:background="#003971"
                    />

                <TextView
                    android:layout_width="@dimen/_270sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:text="@string/droplets_that_from_infected_person_coughs_or_sneezes"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="#003971"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transmission3"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:textSize="@dimen/_12ssp"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</HorizontalScrollView>